<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="wrapperStackPane" stylesheets="@../styling/root.css"
	xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controllers.MainController">
	<children>
		<VBox fx:id="mainContentWrapper">
			<children>
				<SplitPane dividerPositions="0.75" prefHeight="700.0"
					prefWidth="1000.0" styleClass="backdrop">
					<items>
						<AnchorPane minWidth="1000.0">
							<children>
								<VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
									AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
									<children>
										<StackPane fx:id="contentPane" alignment="TOP_LEFT"
											VBox.vgrow="ALWAYS">
											<children>
												<fx:include fx:id="purchasePane" source="purchase.fxml" />
												<fx:include fx:id="credentialsPane" source="credentials.fxml" />
												<fx:include fx:id="storePane" source="store.fxml" />
											</children>
										</StackPane>
									</children>
								</VBox>
							</children>
						</AnchorPane>
						<AnchorPane prefHeight="601.0" prefWidth="142.0">
							<children>
								<Button fx:id="purchaseHistoryButton" layoutX="14.0" layoutY="14.0" mnemonicParsing="false"
									prefHeight="44.0" prefWidth="116.0" text="Köphistorik" />
								<fx:include fx:id="shoppingCart" source="shopping_cart.fxml" />

							</children>
						</AnchorPane>
					</items>
				</SplitPane>
				<AnchorPane prefHeight="103.0" prefWidth="1057.0"
					styleClass="base-style">
					<children>
						<Button fx:id="nextButton" layoutX="485.0" layoutY="15.0"
							minWidth="-Infinity" mnemonicParsing="false" styleClass="nav-button"
							AnchorPane.bottomAnchor="14.0" AnchorPane.rightAnchor="7.0"
							AnchorPane.topAnchor="14.0">
							<graphic>
								<ImageView fitWidth="90.0" pickOnBounds="true"
									preserveRatio="true">
									<image>
										<Image url="@../resources/pilHöger.png" />
									</image>
								</ImageView>
							</graphic>
						</Button>
						<Button fx:id="prevButton" layoutX="29.0" layoutY="15.0"
							minWidth="-Infinity" mnemonicParsing="false" styleClass="nav-button"
							AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="7.0"
							AnchorPane.topAnchor="14.0">
							<graphic>
								<ImageView fitWidth="90.0" pickOnBounds="true"
									preserveRatio="true">
									<image>
										<Image url="@../resources/pilVänster.png" />
									</image>
								</ImageView>
							</graphic>
						</Button>
					</children>
				</AnchorPane>
			</children>
		</VBox>
		<fx:include fx:id="purchaseHistoryPane" maxWidth="-Infinity" maxHeight="-Infinity" source="purchase_history.fxml"/>
	</children>
</StackPane>
